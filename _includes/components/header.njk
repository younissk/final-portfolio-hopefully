{% set css %}
{% include "css/header.css" %}
{% endset %}

<style>
  {{css | safe}}
</style>

<header class="site-header">
  <div class="header-container">
    <div class="logo-container">
      <a href="{{ '/' | url }}" class="site-logo">
        {{ metadata.title }}
      </a>
    </div>

    <button class="mobile-menu-toggle" aria-label="Toggle menu">
      <span></span>
      <span></span>
      <span></span>
    </button>

    <nav class="main-nav">
      <ul class="nav-list">
        {%- for nav in collections.nav | sort(attribute="date") -%}
          <li class="nav-item">
            <a href="{{ nav.url | url }}" 
             class="nav-link {% if nav.url == page.url %}active{% endif %}">
              {{ nav.data.navtitle }}
            </a>
          </li>
        {%- endfor -%}
      </ul>
    </nav>
  </div>
</header>

{% set js %}
{% include "js/header.js" %}
{% endset %}

<script>
  {{ js | safe }}
</script>