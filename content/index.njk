{% css %}
.section-heading {
	font-size: 2rem;
	margin-top: 2.5rem;
	margin-bottom: 1rem;
	color: var(--heading-color);
}

.subsection-heading {
	font-size: 1.5rem;
	margin-top: 1.5rem;
	margin-bottom: 0.75rem;
	color: var(--heading-color);
}

.header-anchor {
	color: #999;
	text-decoration: none;
	margin-left: 0.5rem;
	opacity: 0.5;
	font-weight: normal;
}

.post-list {
  list-style: none;
  padding-left: 0;
  margin-top: 2rem;
}

.post-item {
  margin-bottom: 2rem;
  padding-bottom: 1.5rem;
  border-bottom: 1px solid var(--border-color);
}

.post-item:last-child {
  border-bottom: none;
}

.post-title {
  font-size: 1.5rem;
  margin: 0 0 0.5rem 0;
}

.post-title a {
  color: var(--heading-color);
  text-decoration: none;
}

.post-title a:hover {
  text-decoration: underline;
}

.post-meta {
  font-size: 0.9rem;
  color: var(--color-secondary);
  margin-bottom: 0.75rem;
}

.post-description {
  color: var(--text-color);
  margin: 0.5rem 0 0 0;
  line-height: 1.6;
}

@media (prefers-color-scheme: dark) {
	.header-anchor {
		color: #666;
	}
  
  .post-title a {
    color: var(--heading-color);
  }
  
  .post-meta {
    color: #9ca3af;
  }
}

ul {
	list-style: none;
	padding-left: 0;
}

ul li {
	margin-bottom: 0.5rem;
}

a {
	color: var(--color-primary);
	text-decoration: none;
}

a:hover {
	text-decoration: underline;
}

.project-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 2rem;
	margin: 2rem 0;
}
{% endcss %}
