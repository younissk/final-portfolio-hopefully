{% css %}
.section-heading {
	font-size: 2rem;
	margin-top: 2.5rem;
	margin-bottom: 1rem;
	color: var(--heading-color);
}

.subsection-heading {
	font-size: 1.5rem;
	margin-top: 1.5rem;
	margin-bottom: 0.75rem;
	color: var(--heading-color);
}

.header-anchor {
	color: #999;
	text-decoration: none;
	margin-left: 0.5rem;
	opacity: 0.5;
	font-weight: normal;
}

@media (prefers-color-scheme: dark) {
	.header-anchor {
		color: #666;
	}
}

ul {
	list-style: none;
	padding-left: 0;
}

ul li {
	margin-bottom: 0.5rem;
}

a {
	color: var(--color-primary);
	text-decoration: none;
}

a:hover {
	text-decoration: underline;
}

.project-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
	gap: 2rem;
	margin: 2rem 0;
}
{% endcss %}
