{% css %}
.experience-section {
  margin-top: 2rem;
}

.experience-item {
  margin-bottom: 3rem;
  padding-left: 2rem;
  position: relative;
}

.experience-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0.5rem;
  width: 1.5rem;
  height: 1.5rem;
  background-color: #34d399;
  border-radius: 4px;
}

.experience-title {
  font-size: 1.75rem;
  font-weight: bold;
  color: var(--color-text);
  margin-bottom: 0.5rem;
}

.experience-company {
  font-size: 1.25rem;
  color: var(--color-secondary);
  margin-bottom: 0.5rem;
}

.experience-date {
  font-size: 1rem;
  color: var(--color-secondary);
  margin-bottom: 1rem;
}

.experience-responsibilities {
  margin-top: 1rem;
}

.experience-responsibilities-title {
  font-size: 1.1rem;
  color: var(--color-secondary);
  margin-bottom: 0.5rem;
}

.experience-list {
  list-style: none;
  padding: 0;
}

.experience-list li {
  position: relative;
  padding-left: 1.5rem;
  margin-bottom: 0.75rem;
  color: var(--color-secondary);
}

.experience-list li::before {
  content: '•';
  position: absolute;
  left: 0;
  color: var(--color-primary);
}

@media (max-width: 768px) {
  .experience-item {
    padding-left: 1.5rem;
  }

  .experience-title {
    font-size: 1.5rem;
  }

  .experience-company {
    font-size: 1.1rem;
  }
}
{% endcss %} 